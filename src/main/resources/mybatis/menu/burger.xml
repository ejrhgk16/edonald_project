<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edonald.menu.dao.BurgerMapper">
	<select id="listAll" resultType="com.edonald.menu.dto.BurgerDto">
		SELECT *  FROM burger b WHERE burger_status != 0 ORDER BY category_code,b_seq ASC
	</select>
	<insert id="insert">
		INSERT INTO burger VALUES(
			#{burger_code},
			#{burger_name},
			#{burger_kcal},
			#{burger_img_path},
			#{burger_set_img_path},
			#{burger_status},
			#{category_code},
			#{burger_type},
			#{burger_price},
			#{burger_allergy},
			NULL
			)
	</insert>
</mapper>