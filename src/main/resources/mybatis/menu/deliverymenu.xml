<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edonald.deliver.dao.DeliveryMenuMapper">
	<select id="bList" resultType="com.edonald.hadmin.dto.MenuDto">
		SELECT * FROM menu b WHERE status != 0 ORDER BY category_code,seq ASC
	</select>
	
	
	<!-- 이거 메뉴화며에 '준비중' 처리 할려고 작성해둔것 -->
	<select id="getBlockMenuList" resultType="string">
		SELECT menu_code FROM block_order_list WHERE store_code = #{store_code};
	</select>
</mapper>